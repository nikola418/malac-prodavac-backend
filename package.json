    "@faker-js/faker": "^8.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.93",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.4",
    "@types/cookie": "^0.5.3",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash": "^4.14.200",
