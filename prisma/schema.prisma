generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "postgresqlExtensions"]
  binaryTargets   = ["native"]
}

datasource db {
  provider   = "postgresql"
  url        = env("POSTGRES_DATABASE_URL")
  extensions = [postgis(version: "3.4.0")]
}

enum UserRole {
  Customer
  Courier
  Shop
}

enum OrderStatus {
  Ordered
  Packaged
  InDelivery
  Received
  Returned
}

enum DeliveryMethod {
  ByCourier
  SelfPickup
}

enum Currency {
  RSD
}

enum PaymentMethod {
  OnDelivery
  PayPal
}

model User {
  id                Int           @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String        @unique
  password          String
  address           String        @default("")
  addressLatitude   Decimal?
  addressLongitude  Decimal?
  phoneNumber       String?
  currency          Currency      @default(RSD)
  paymentMethod     PaymentMethod @default(OnDelivery)
  roles             UserRole[]    @default([])
  profilePictureKey String?       @unique
  updatedAt         DateTime      @updatedAt
  createdAt         DateTime      @default(now())

  customer       Customer?
  shop           Shop?
  courier        Courier?
  profilePicture Media?    @relation(fields: [profilePictureKey], references: [key], onDelete: SetNull)

  @@map("users")
}

model Customer {
  id               Int      @id @default(autoincrement())
  userId           Int      @unique
  favoriteShops    Int[]
  favoriteProducts Int[]
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]
  chats  Chat[]

  @@map("customers")
}

model Courier {
  id                       Int      @id @default(autoincrement())
  userId                   Int      @unique
  pricePerKilometer        Decimal?
  currentLocation          String?
  currentLocationLatitude  Decimal?
  currentLocationLongitude Decimal?
  updatedAt                DateTime @updatedAt
  createdAt                DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("couriers")
}

model Shop {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique
  businessName String?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  products    Product[]
  chats       Chat[]
  ReviewReply ReviewReply[]

  @@map("shops")
}

model Order {
  id               Int            @id @default(autoincrement())
  productId        Int
  customerId       Int
  courierId        Int?
  orderStatus      OrderStatus    @default(Ordered)
  deliveryMethod   DeliveryMethod @default(ByCourier)
  timeOfSelfPickup DateTime
  updatedAt        DateTime       @updatedAt
  createdAt        DateTime       @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  courier  Courier? @relation(fields: [courierId], references: [id], onDelete: SetNull)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model Product {
  id                   Int      @id @default(autoincrement())
  shopId               Int
  title                String   @default("")
  desc                 String   @default("")
  price                Decimal
  available            Boolean  @default(true)
  rating               Decimal  @default(0)
  ratingsCount         Int      @default(0)
  availableAt          String?
  availableAtLatitude  Decimal?
  availableAtLongitude Decimal?
  availableFromHours   Decimal?
  availableTillHours   Decimal?
  categoryId           Int
  thumbnailKey         String?  @unique
  currency             Currency @default(RSD)
  updatedAt            DateTime @updatedAt
  createdAt            DateTime @default(now())

  owner     Shop       @relation(fields: [shopId], references: [id])
  category  Category   @relation(fields: [categoryId], references: [id])
  discounts Discount[]
  orders    Order[]
  reviews   Review[]

  @@map("products")
}

model Discount {
  id         Int      @id @default(autoincrement())
  productId  Int
  percentage Decimal  @default(0)
  untilDate  DateTime
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@map("discounts")
}

model Review {
  id        Int      @id @default(autoincrement())
  text      String
  rating    Int
  userId    Int
  productId Int
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  reviewReplies ReviewReply[]
  product       Product       @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model ReviewReply {
  id        Int      @id @default(autoincrement())
  text      String
  shopId    Int
  reviewId  Int
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  shop   Shop   @relation(fields: [shopId], references: [id])
  review Review @relation(fields: [reviewId], references: [id])

  @@map("reviewReplies")
}

model Category {
  id               Int      @id @default(autoincrement())
  name             String
  parentCategoryId Int?
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  subCategories  Category[] @relation(name: "category_has_subcategory")
  parentCategory Category?  @relation(name: "category_has_subcategory", fields: [parentCategoryId], references: [id])
  products       Product[]

  @@map("categories")
}

model Media {
  id           Int      @id @default(autoincrement())
  mimetype     String
  key          String   @unique
  originalName String
  name         String?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  user User?

  @@map("medias")
}

model Chat {
  id         Int      @id @default(autoincrement())
  customerId Int
  shopId     Int
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  customer     Customer     @relation(fields: [customerId], references: [id])
  shop         Shop         @relation(fields: [shopId], references: [id])
  chatMessages ChatMessage?

  @@map("chats")
}

model ChatMessage {
  id          Int      @id @default(autoincrement())
  text        String
  senderId    Int
  recipientId Int
  opened      Boolean  @default(false)
  chatId      Int      @unique
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id])

  @@map("chat_messages")
}
